<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2">

        <TextView
            android:id="@+id/test01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
        <TextView
            android:id="@+id/test03"
            android:layout_below="@+id/test01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_refresh"
        android:layout_width="139sp"
        android:layout_height="28sp"
        android:contentDescription="@string/refresh"
        android:layout_marginTop="16dp"
        android:src="@drawable/selector"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/resText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getBut"
        />
    <TextView
        android:id="@+id/project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resText"
        />
    <TextView
        android:id="@+id/area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/project"
        />
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/area"
        />


    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getBut1"
        />

    <ImageButton
        android:id="@+id/getBut1"
        android:layout_width="139sp"
        android:layout_height="28sp"
        android:contentDescription="@string/get_message"
        android:src="@drawable/selector4"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_refresh"
        android:layout_alignStart="@+id/btn_refresh"
        android:layout_marginBottom="182dp" />

    <ImageButton
        android:id="@+id/getBut"
        android:layout_width="139sp"
        android:layout_height="28sp"
        android:contentDescription="@string/decs"
        android:src="@drawable/selector3"
        android:layout_below="@+id/btn_refresh"
        android:layout_alignLeft="@+id/btn_refresh"
        android:layout_alignStart="@+id/btn_refresh"
        android:layout_marginTop="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动按键精灵"
        android:layout_marginTop="67dp"
        android:id="@+id/start_anjian"
        android:layout_alignTop="@+id/getBut1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卸载APK"
        android:id="@+id/uninstall"
        android:layout_below="@+id/start_anjian"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安装APK"
        android:id="@+id/install_JM"
        android:layout_below="@+id/start_anjian"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载"
        android:id="@+id/downapk"
        android:layout_below="@+id/start_anjian"
        android:layout_toRightOf="@+id/message"
        android:layout_toEndOf="@+id/message" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/progressBar"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/message"
        android:layout_toEndOf="@+id/message"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/progressBar3"
        android:layout_below="@+id/uninstall"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/progressBar2"
        android:layout_below="@+id/install_JM"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
